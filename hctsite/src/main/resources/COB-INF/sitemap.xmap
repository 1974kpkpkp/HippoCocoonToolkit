<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap"
             xmlns:servlet="http://apache.org/cocoon/servlet" 
             xmlns:controller="http://apache.org/cocoon/controller"> 

  <map:pipelines>
    <map:pipeline>
      <map:match pattern="css/{filename}.css">
        <map:read src="css/{map:filename}.css" />
      </map:match>
      <map:match pattern="**/css/{filename}.css">
        <map:read src="css/{map:filename}.css" />
      </map:match>

      <map:match pattern="images/{filename}.gif">
        <map:read src="images/{map:filename}.gif" />
      </map:match>
      <map:match pattern="**/images/{filename}.gif">
        <map:read src="images/{map:filename}.gif" />
      </map:match>
      <map:match pattern="images/{filename}.jpg">
        <map:read src="images/{map:filename}.jpg" />
      </map:match>
      <map:match pattern="**/images/{filename}.jpg">
        <map:read src="images/{map:filename}.jpg" />
      </map:match>
      <map:match pattern="images/{filename}.png">
        <map:read src="images/{map:filename}.png" />
      </map:match>
      <map:match pattern="**/images/{filename}.png">
        <map:read src="images/{map:filename}.png" />
      </map:match>
    </map:pipeline>
        
    <!-- Components -->
    <map:pipeline type="noncaching" internal-only="true">
      <map:match pattern="components/static/**">
        <map:read src="components/static/{map:1}"/>
      </map:match>
            
      <map:match pattern="components/collection">
        <map:generate type="string-template" src="components/collection.xml"/>
        <map:transform type="hippo"/>
        <map:transform src="components/collection.xsl">
          <map:parameter name="contextPath" value="{jexl:cocoon.request.contextPath}"/>
          <map:parameter name="availability" value="{jexl:cocoon.request.availability}"/>
          <map:parameter name="locale" value="{jexl:empty(cocoon.request['lang'])
                                               ? cocoon.settings.getProperty('net.tirasa.hct.defaultLocale')
                                               : cocoon.request.lang}"/>
          <map:parameter name="requestURI" value="{jexl:cocoon.request.getParameter('requestURI')}"/>
        </map:transform>
        <map:serialize/>
      </map:match>

      <map:match pattern="components/search">
        <map:generate type="string-template" src="components/search.xml">
          <map:parameter name="has_query" value="{jexl:not empty(cocoon.request.query)}"/>
	</map:generate>
        <map:transform type="hippo"/>
        <map:transform src="components/search.xsl">
          <map:parameter name="contextPath" value="{jexl:cocoon.request.contextPath}"/>
          <map:parameter name="availability" value="{jexl:cocoon.request.availability}"/>
          <map:parameter name="locale" value="{jexl:empty(cocoon.request['lang'])
                                               ? cocoon.settings.getProperty('net.tirasa.hct.defaultLocale')
                                               : cocoon.request.lang}"/>
          <map:parameter name="query" value="{jexl:cocoon.request.query}"/>
        </map:transform>
        <map:serialize/>
      </map:match>

      <map:match pattern="components/*">
        <map:generate type="string-template" src="components/{map:1}.xml"/>
        <map:transform type="hippo"/>
        <!--<map:transform type="logasxml"/>-->
        <map:transform src="components/{map:1}.xsl">
          <map:parameter name="contextPath" value="{jexl:cocoon.request.contextPath}"/>
          <map:parameter name="availability" value="{jexl:cocoon.request.availability}"/>
          <map:parameter name="locale" value="{jexl:empty(cocoon.request['lang'])
                                               ? cocoon.settings.getProperty('net.tirasa.hct.defaultLocale')
                                               : cocoon.request.lang}"/>
        </map:transform>
        <map:serialize/>
      </map:match>
    </map:pipeline>

    <map:pipeline type="noncaching">
      <!-- Image management -->
      <map:match pattern="gallery/**.gif">
        <map:read src="servlet:/gallery/{map:1}.gif:original"/>
      </map:match>
      <map:match pattern="gallery/**.jpg">
        <map:read src="servlet:/gallery/{map:1}.jpg:original"/>
      </map:match>
      <map:match pattern="gallery/**.png">
        <map:read src="servlet:/gallery/{map:1}.png:original"/>
      </map:match>
      <map:match pattern="gallery/**.*:*">
        <map:read type="hippo" src="/content/gallery/{map:1}.{map:2}:{map:3}"/>
      </map:match>

      <!-- Asset management -->
      <map:match pattern="assets/content/documents/**.*">
        <map:read type="hippo" src="/content/documents/{map:1}.{map:2}"/>
      </map:match>
      <map:match pattern="assets/content/assets/**.*">
        <map:read type="hippo" src="/content/assets/{map:1}.{map:2}"/>
      </map:match>
      <map:match pattern="assets/content/gallery/**.*">
        <map:read type="hippo" src="/content/gallery/{map:1}.{map:2}:original"/>
      </map:match>
            
      <!-- Navigation -->
      <!-- Root -->
      <map:match pattern="">
        <servlet:redirect-to uri="{jexl:cocoon.request.scheme}://{jexl:cocoon.request.serverName}:{jexl:cocoon.request.serverPort}{jexl:cocoon.request.contextPath}/live/hctsite/index.html"/>
      </map:match>
      <map:match pattern="live/*">
        <servlet:redirect-to uri="{jexl:cocoon.request.scheme}://{jexl:cocoon.request.serverName}:{jexl:cocoon.request.serverPort}{jexl:cocoon.request.contextPath}/live/hctsite/{map:1}"/>
      </map:match>
      <map:match pattern="preview/*">
        <servlet:redirect-to uri="{jexl:cocoon.request.scheme}://{jexl:cocoon.request.serverName}:{jexl:cocoon.request.serverPort}{jexl:cocoon.request.contextPath}/preview/hctsite/{map:1}"/>
      </map:match>

      <!-- Search -->
      <map:match pattern="*/**/search">
        <map:generate type="string-template" src="pages/search.xml">
          <map:parameter name="availability" value="{map:1}"/>
          <map:parameter name="base" value="/content/documents/"/>
          <map:parameter name="locale" value="{jexl:empty(cocoon.request['lang'])
                                               ? cocoon.settings.getProperty('net.tirasa.hct.defaultLocale')
                                               : cocoon.request.lang}"/>        
          <map:parameter name="requestURI" value="{jexl:cocoon.request.requestURI}"/>
          <map:parameter name="query" value="{jexl:cocoon.request.query}"/>
        </map:generate>
        <map:transform type="xinclude"/>
        <map:transform src="pages/subindex2html.xsl"/>
        <map:transform type="i18n">
          <map:parameter name="locale" value="{jexl:empty(cocoon.request['lang'])
                                               ? cocoon.settings.getProperty('net.tirasa.hct.defaultLocale')
                                               : cocoon.request.lang}"/>          
          <map:parameter name="bundle" value="COB-INF/i18n/messages" />
        </map:transform>
        <map:serialize type="html"/>
      </map:match>

      <!-- Taxonomy-based navigation: index page -->
      <map:match pattern="*/taxonomy/**/index.html">
        <map:generate type="string-template" src="pages/subindex.xml">
          <map:parameter name="availability" value="{map:1}"/>
          <map:parameter name="base" value="/content/taxonomies/it/it/{map:2}"/>
          <map:parameter name="locale" value="{jexl:empty(cocoon.request['lang'])
                                               ? cocoon.settings.getProperty('net.tirasa.hct.defaultLocale')
                                               : cocoon.request.lang}"/>
        </map:generate>
        <map:transform type="xinclude"/>
        <map:transform src="pages/subindex2html.xsl"/>
        <map:transform type="i18n">
          <map:parameter name="locale" value="{jexl:empty(cocoon.request['lang'])
                                               ? cocoon.settings.getProperty('net.tirasa.hct.defaultLocale')
                                               : cocoon.request.lang}"/>          
          <map:parameter name="bundle" value="COB-INF/i18n/messages" />
        </map:transform>
        <map:serialize type="html"/>
      </map:match>

      <!-- Repository-based navigation: index page -->
      <map:match pattern="*/**/index.html">
        <map:generate type="string-template" src="pages/subindex.xml">
          <map:parameter name="availability" value="{map:1}"/>
          <map:parameter name="base" value="/content/documents/{map:2}"/>
          <map:parameter name="locale" value="{jexl:empty(cocoon.request['lang'])
                                               ? cocoon.settings.getProperty('net.tirasa.hct.defaultLocale')
                                               : cocoon.request.lang}"/>        
          <map:parameter name="requestURI" value="{jexl:cocoon.request.requestURI}"/>
        </map:generate>
        <map:transform type="xinclude"/>
        <map:transform src="pages/subindex2html.xsl"/>
        <map:transform type="i18n">
          <map:parameter name="locale" value="{jexl:empty(cocoon.request['lang'])
                                               ? cocoon.settings.getProperty('net.tirasa.hct.defaultLocale')
                                               : cocoon.request.lang}"/>          
          <map:parameter name="bundle" value="COB-INF/i18n/messages" />
        </map:transform>
        <map:serialize type="html"/>
      </map:match>

      <!-- Taxonomy-based navigation: document page -->
      <map:match pattern="*/taxonomy/**/*.html">
        <map:generate type="string-template" src="pages/document.xml">
          <map:parameter name="availability" value="{map:1}"/>
          <map:parameter name="path" value="/content/taxonomies/it/it/{map:2}/hippotaxonomy:documents/hippo:resultset/{map:3}"/>
          <map:parameter name="locale" value="{jexl:empty(cocoon.request['lang'])
                                               ? cocoon.settings.getProperty('net.tirasa.hct.defaultLocale')
                                               : cocoon.request.lang}"/>        
        </map:generate>
        <map:transform type="xinclude"/>
        <map:transform src="pages/document2html.xsl"/>
        <map:serialize type="html"/>
      </map:match>

      <!-- Repository-based navigation: document page -->
      <map:match pattern="*/**/*.html">
        <map:generate type="string-template" src="pages/document.xml">
          <map:parameter name="availability" value="{map:1}"/>
          <map:parameter name="base" value="/content/documents/{map:2}"/>
          <map:parameter name="path" value="/content/documents/{map:2}/{map:3}"/>
          <map:parameter name="locale" value="{jexl:empty(cocoon.request['lang'])
                                               ? cocoon.settings.getProperty('net.tirasa.hct.defaultLocale')
                                               : cocoon.request.lang}"/>        
          <map:parameter name="requestURI" value="{jexl:cocoon.request.requestURI}"/>
        </map:generate>
        <map:transform type="xinclude"/>
        <map:transform src="pages/document2html.xsl"/>
        <map:serialize type="html"/>
      </map:match>

      <!-- PDF -->
      <map:match pattern="*/**/*.pdf">
        <map:generate type="string-template" src="pages/pdf.xml">
          <map:parameter name="availability" value="{map:1}"/>
          <map:parameter name="path" value="/content/documents/{map:2}/{map:3}"/>
          <map:parameter name="locale" value="{jexl:empty(cocoon.request['lang'])
                                               ? cocoon.settings.getProperty('net.tirasa.hct.defaultLocale')
                                               : cocoon.request.lang}"/>        
        </map:generate>
        <map:transform type="xinclude"/>
        <map:transform src="pages/pdf2fo.xsl">
          <map:parameter name="scheme" value="{jexl:cocoon.request.scheme}"/>
          <map:parameter name="servername" value="{jexl:cocoon.request.serverName}"/>
          <map:parameter name="port" value="{jexl:cocoon.request.serverPort}"/>
        </map:transform>
        <map:serialize type="fo2pdf"/>
      </map:match>
            
      <!-- Preview from CMS -->
      <map:match pattern="previewfromcms">
        <map:generate type="string-template" src="pages/previewfromcms.xml">
          <map:parameter name="uuid" value="{jexl:cocoon.request.uuid}"/>
          <map:parameter name="availability" value="{jexl:cocoon.request.type}"/>
        </map:generate>
        <map:transform type="xinclude"/>
        <map:transform src="pages/previewfromcms2html.xsl"/>
        <map:serialize type="html"/>
      </map:match>
    </map:pipeline>
        
    <!-- Global error handling -->
    <map:handle-errors>
      <map:select value="{jexl:cocoon.exception.class.name}">
        <map:when contains="FileNotFoundException">
          <map:generate src="errors/404.xml" />
          <map:serialize type="xhtml" status-code="404" />
        </map:when>
        <map:when contains="NoMatchingPipelineException">
          <map:generate src="errors/404.xml" />
          <map:serialize type="xhtml" status-code="404" />
        </map:when>
        <map:when contains="HippoRepositoryNotFoundException">
          <map:generate src="errors/404.xml" />
          <map:serialize type="xhtml" status-code="404" />
        </map:when>
        <map:otherwise>
          <map:generate type="exception" />
          <map:serialize type="xml" status-code="500" />
        </map:otherwise>
      </map:select>
    </map:handle-errors>
  </map:pipelines>
  
</map:sitemap>
